{
  "manifest_version": 3,
  "name": "Flashback",
  "version": "1.0",
  "description": "Spotlight-like search for browser history",
  "permissions": [
    "history",
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Toggle Flashback Search"
    }
  }
}
